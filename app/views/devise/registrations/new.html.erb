<div class='header'>
<div class="col1">
<a href='/'><i class="fa-solid fa-angle-left"></i></a>
</div>
<div class="col2">
<h2 class='title'>Sign up</h2>
</div>
<div class="col3">
<p><%= link_to "Log in", new_user_session_path %></p>
</div>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.text_field :name, autofocus: true, autocomplete: "name",placeholder: "Full name", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email",placeholder: "Email", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, autocomplete: "new-password",placeholder: "Password (6 characters minimum)", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Confirm password", class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "button" %>
  </div>
<% end %>
