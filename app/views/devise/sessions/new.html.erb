<div class='header'>
<div class="col1">
<a href='/'><i class="fa-solid fa-angle-left"></i></a>
</div>
<div class="col2">
<h2 class='title'>Log in</h2>
</div>
<div class="col3">
<p><%= link_to "Sign up", new_user_registration_path %></p>
</div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.email_field :email, placeholder: 'Email', autofocus: true, autocomplete: "email", class: "input-field" %>
  </div>

  <div class="field">
    <%= f.password_field :password, placeholder: 'Password', autocomplete: "current-password", class: "input-field" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="input-field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div>
    <%= f.submit "Log in", class: "button" %>
  </div>
<% end %>

<div class='shared-links'>
<%= render "devise/shared/links" %>
</div>
