<div class='header'>
<a href='/users/sign_in'><i class="fa-solid fa-angle-left"></i></a>
<h3 class='title'>Forgot your password?</h3>
<p><%= link_to "Sign up", new_user_registration_path %></p>
</div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input-field" %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", class: "button" %>
  </div>
<% end %>
