<%= link_to category_transactions_path(category.id) do %>
<div id="<%= dom_id category %>" class="category">
  <div class="cat-img">
    <%= image_tag category_img(category) %>
  </div>
  
  <p class="cat-name">
    <strong><%= category.name %></strong>
    
    <span>$ <%= category.transactions.all.sum(:amount) %></span>
  </p>
  <%= button_to "Delete", category_path(category.id), method: :delete, 
                    data: {confirm: 'Are you sure?'}, class: "delet-btn" %>
</div>
<% end %>
